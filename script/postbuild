#!/bin/zsh
set -eu; here=${0:a:h}; root=$here/..; BuildScripts=$root/BuildScripts; source $BuildScripts/common; sayhi $0
memo_vars vars_postbuild # save shell vars to temp file to aid debugging script
pushd $PROJECT_DIR

# put back the placeholder constants in version config
cat <<END > Version.xcconfig
// placeholder contents generated by postbuild script; replaced by real values in prebuild script
PLT_SR_VERSION_NUM = 0
PLT_SR_VERSION_STRING = not_set
PLT_SR_RELEASE_CHANNEL = not_set
PLT_SR_RELEASE_EDITION = not_set
END

popd
saybye $0
